int buttonState = 0; 
int lastButtonState = 0;
int buttonState2 = 0;
int lastButtonState2 = 0;
int buttonState3 = 0;
int lastButtonState3 = 0; 
void loop(void)
{
// check if the pushbutton is pressed. If it is, the buttonState is HIGH:
    buttonState = digitalRead(play_button);
    if (buttonState != lastButtonState) {
      if (buttonState == LOW) {
