<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".app.about_activ">


    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="271dp" />
    <Button
        android:id="@+id/video_play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"


        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Above is a video tutorial to get you started. If you have any issues, click the contact button. " />

    <Button
        android:id="@+id/contact_button"
        style="@android:style/Widget.Button"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_other"
        android:onClick="videoPlay"
        android:text="CONTACT US"
        tools:ignore="OnClick"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="469dp"
        tools:text="@string/button_contact" />

</LinearLayout>